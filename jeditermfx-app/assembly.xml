<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                              http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>app</id>
    <formats>
        <format>tar</format>
    </formats>
    <baseDirectory>jeditermfx-app-${project.version}</baseDirectory>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>/bin</outputDirectory>
            <directory>${project.basedir}/scripts</directory>
            <fileMode>755</fileMode>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <includes>
                <include>com.techsenger.jeditermfx:jeditermfx-core</include>
                <include>com.techsenger.jeditermfx:jeditermfx-ui</include>
                <include>com.techsenger.jeditermfx:jeditermfx-app</include>
                <include>org.jetbrains:annotations</include>
                <include>net.java.dev.jna:jna</include>
                <include>net.java.dev.jna:jna-platform</include>
                <include>org.jetbrains.kotlin:kotlin-stdlib</include>
                <include>org.jetbrains.pty4j:pty4j</include>
                <include>org.jetbrains.pty4j:purejavacomm</include>
                <include>org.slf4j:slf4j-api</include>
                <include>org.apache.logging.log4j:log4j-api</include>
                <include>org.apache.logging.log4j:log4j-core</include>
                <include>org.apache.logging.log4j:log4j-slf4j2-impl</include>
                <include>org.openjfx:javafx-controls</include>
                <include>org.openjfx:javafx-base</include>
                <include>org.openjfx:javafx-graphics</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>